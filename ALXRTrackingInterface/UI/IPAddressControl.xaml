             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" Width="118">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="part1" Width="28" Margin="0,0,2,0" TextChanged="TextBox_TextChanged" />
        <TextBox x:Name="part2" Width="28" Margin="0,0,2,0" TextChanged="TextBox_TextChanged" />
        <TextBox x:Name="part3" Width="28" Margin="0,0,2,0" TextChanged="TextBox_TextChanged" />
